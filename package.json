{
  "name": "chefs-diary",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --experimental-https",
    "build": "next build",
    "build:devel": "npx dotenv-cli -e .env.development next build",
    "build:prod": "npx dotenv-cli -e .env.prod next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "npx prisma generate",
    "prisma:db_push": "npx dotenv-cli -e .env.migrate prisma db push",
    "prisma:migrate": "npx dotenv-cli -e .env.migrate prisma migrate dev",
    "prisma:migrate_devel": "npx dotenv-cli -e .env.development prisma migrate deploy",
    "prisma:migrate_prod": "prisma generate --no-engine && npx dotenv-cli -e .env.prod prisma migrate deploy",
    "prisma:studio_devel": "npx dotenv-cli -e .env.development prisma studio",
    "prisma:seed_devel": "npx dotenv-cli -e .env.development prisma db seed",
    "prisma:seed_prod": "npx dotenv-cli -e .env.prod prisma db seed",
    "prisma:reset": "npx dotenv-cli -e .env.migrate prisma migrate reset",
    "prisma:reset_dev": "npx dotenv-cli -e .env.development prisma migrate reset"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "ts-node prisma/seeds.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@heroui/system": "^2.4.17",
    "@heroui/theme": "^2.4.17",
    "@heroui/tooltip": "^2.2.16",
    "next": "15.3.3",
    "next-auth": "^5.0.0-beta.28",
    "nodemailer": "^6.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^9.8.0",
    "@heroui/react": "^2.7.10",
    "@prisma/client": "^6.8.2",
    "@prisma/extension-accelerate": "^2.0.0",
    "@prisma/extension-optimize": "^2.0.0",
    "@prisma/instrumentation": "^6.9.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.19",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "framer-motion": "^12.12.1",
    "next-themes": "^0.4.6",
    "prisma": "^6.9.0",
    "react-icons": "^5.5.0",
    "require-in-the-middle": "^7.5.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "use-debounce": "^10.0.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^1.6.1"
  }
}
